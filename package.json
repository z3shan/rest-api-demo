{
  "name": "task-manager-api",
  "version": "1.0.0",
  "description": "A simple RESTful API for a Task Management Application",
  "main": "dist/server.js",
  "scripts": {
    "build": "NODE_ENV=production tsc",
    "start": "NODE_ENV=production node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "mongoose": "^8.0.3",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.11.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.8.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
